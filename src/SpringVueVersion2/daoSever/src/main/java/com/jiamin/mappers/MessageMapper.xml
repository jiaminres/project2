<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiamin.mappers.MessageMapper">
    <select id="selectMessageFromSendAndAccept" resultType="org.example.common.entity.User">
         select * from message where sendID = userAID and acceptID = userBID or acceptID = userAID and sendID = userBID
    </select>
    <!-- private String message;
    private String sendID;
    private String acceptID;
    private Date date;-->
    <insert id="insertOneMessage">
        insert into Message(message,sendID,acceptID,date) values(message,sendID,acceptID,date)
    </insert>
</mapper>