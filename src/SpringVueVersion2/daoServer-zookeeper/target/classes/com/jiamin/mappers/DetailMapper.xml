<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiamin.mappers.DetailMapper">
    <!--    <cache type="com.jiamin.config.MyRedisClusterCache"></cache>-->
    <resultMap id="detail" type="org.example.common.entity.Detail">
        <id column="userID" property="userID"></id>
        <result column="sex" property="sex"/>
        <result column="age" property="age"/>
        <result column="birthday" property="birthday" jdbcType="DATE" javaType="long"/>
        <result column="location" property="location"/>
        <result column="persionalSign" property="persionalSign"/>
    </resultMap>
    <select id="selectOneDetail" resultMap="detail">
        select * from detail where userID = #{userID};
    </select>
    <update id="updateOneDetail">
        update detail set sex = #{sex}, age = #{age}, birthday = #{birthday, jdbcType=DATE}, location = #{location}, persionalSign = #{persionalSign}
        where userID = #{userID}
    </update>
    <insert id="insertOneDetail">
        insert into detail(userID) values(#{userID})
    </insert>
</mapper>